<div id="content-header">
  <%= image_tag("  HR/show_hr.png") %>
  <h1>
    <%= "#{t('employee_settings')}" %>
  </h1>
  <h3>
    <%= "#{t('edit_position')}" %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="page-yield">
  <%= form_for :position, url: {:id => @position.id } do |c| %>
    <% unless flash[:notice].nil? %>
      <p class="flash-msg">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <% unless flash[:warn_notice].nil? %>
      <div class="errorExplanation" id="errorExplanation">
        <%= flash[:warn_notice] %>
      </div>
    <% end %>
    <%= error_messages_for 'position' %>
    <div id="form-content">
      <div class="label-field-pair">
        <label for="position_name">
          <%= t('name') %>
        </label>
        <div class="text-input-bg">
          <%= c.text_field :name %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="category_name">
          <%= "#{t('employee_category')}" %>
        </label>
        <div class="text-input-bg">
          <%= select :position, :employee_category_id, @categories.map {|s| [s.name, s.id]}, :prompt => "#{t('layouts.default.select')}" %>
        </div>
      </div>
      <div class="label-checkbox-pair">
        <label class="status" for="status">
          <%= t('status') %>
        </label>
        <div id="radio-buttons">
          <%= c.radio_button  "status", "true", :checked => "checked" %>
          <label class="label_for_status" for="add_grade_status_true">
            <%= t('active') %>
          </label>
          <%= c.radio_button  "status", "false" %>
          <label class="label_for_status" for="add_grade_status_false">
            <%= t('inactive') %>
          </label>
        </div>
      </div>
      <div id="submit-button">
        <%= submit_tag(" #{t('update')}") %>
      </div>
    </div>
  <% end %>
</div>
