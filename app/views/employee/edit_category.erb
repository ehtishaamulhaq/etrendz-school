<div id="content-header">
  <%= image_tag("HR/show_hr.png") %>
  <h1>
    <%= t('employee_settings') %>
  </h1>
  <h3>
    <%= t('edit_category') %>
  </h3>
  <div id="app-back-button">
    <%= back_button %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <% unless flash[:warn_notice].nil? %>
    <div class="errorExplanation" id="errorExplanation">
      <%= flash[:warn_notice] %>
    </div>
  <% end %>
  <%= form_for :category, url: {:id => @category.id} do |c| %>
    <%= error_messages_for 'category' %>
    <div id="form-content">
      <div class="label-field-pair">
        <label for="category_name">
          <%= t('name') %>
        </label>
        <div class="text-input-bg">
          <%= c.text_field :name %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="category_prefix">
          <%= t('prefix') %>
        </label>
        <div class="text-input-bg">
          <%= c.text_field :prefix %>
        </div>
      </div>
      <div class="label-checkbox-pair">
        <label class="status" for="status">
          <%= t('status') %>
        </label>
        <div id="radio-buttons">
          <%= c.radio_button  "status", "true", :checked => "checked" %>
          <label class="label_for_status" for="add_grade_status_true">
            <%= t('active') %>
          </label>
          <%= c.radio_button  "status", "false" %>
          <label class="label_for_status" for="add_grade_status_false">
            <%= t('inactive') %>
          </label>
        </div>
      </div>
      <div id="submit-button">
        <%= submit_tag(" #{t('update')}") %>
      </div>
    </div>
  <% end %>
</div>
